    <h3>Categories</h3>
    <ul class="list-group">
        <li><a href="/products">All products</a></li>
        <% cats.forEach(function(c){  %>
           <li><a href="/products/<%=c.title%>"><%=c.title%></a></li>

        <%});%>

    </ul>
    <h3>products</h3>

    <%products.forEach(function(p){%>
        <a href="/products/<%=p.title%>"><img src="/public/images/image_games.jpg" alt="no image"></a>
        <h2><%=p.title%></h2>
        <h2><%=p.price%></h2>
        <a href="/cart/add/<%=p.title%>">Add cart</a>
        <%});%>
</body>
